<Text>Correctness Score: @FlashCard.CorrectnessScore</Text>


@code {

    [Parameter]
    public FlashCard FlashCard { get; set; }

    private bool showAnswer;

    private void ShowAnswer()
    {
        showAnswer = true;
    }

    private void IncrementCorrectnessScore()
    {
        FlashCard.CorrectnessScore++;
    }

    private void DecrementCorrectnessScore()
    {
        FlashCard.CorrectnessScore--;
    }

}